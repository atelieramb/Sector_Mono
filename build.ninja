# Rules

rule proofing
  command = _diffbrowsers proof $fonts -s $styles -o $out -pt $pt_size -ch $
      "$characters" --filter-styles "$filters"

# Build rules
build out/proof/Normal: proofing
  fonts = $
      "/Users/mateobroillet/Documents/GitHub/Sector_Mono/fonts/ttf/Sector-Normal.ttf"
  styles = instances
  out = out/diffbrowsers
  pt_size = 20
  characters = .*
  filters = Normal
